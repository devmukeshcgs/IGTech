<body>
    <div class="container">
        <h1 class="header">Chosenbrain Email Sender</h1>
        <form id="emailForm" action="send_email.php" method="POST">
            <div class="form-group">
                <label for="toEmail">Recipient's Email</label>
                <input type="email" class="form-control" id="toEmail" name="toEmail" placeholder="Enter recipient's email" required>
            </div>
        
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" class="form-control" id="subject" name="subject" placeholder="Email subject" required>
            </div>
        
            <div class="form-group">
                <label for="message">Compose Your Message</label>
                <textarea class="form-control" id="message" name="message" rows="6" placeholder="Enter your email message (HTML and plain text)" required></textarea>
            </div>
        
            <button type="submit" class="btn btn-primary">Send Email</button>
        </form>
    
        <div id="response" class="email-response"></div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/2.3.1/purify.min.js"></script>
    <script>
        $(document).ready(function() {
            const emailForm = $("#emailForm");
            const responseDiv = $("#response");

            emailForm.submit(function(event) {
                event.preventDefault();

                const toEmail = $("#toEmail").val();
                const subject = $("#subject").val();
                const message = $("#message").val();

                // Split the input message into plain text and HTML
                const messageParts = message.split('---HTML-EMAIL---');
                const plainTextMessage = messageParts[0];
                const htmlMessage = messageParts[1] || plainTextMessage; // Use plain text as HTML if not provided

                // Sanitize the HTML content to prevent XSS
                const sanitizedPlainTextMessage = DOMPurify.sanitize(plainTextMessage);
                const sanitizedHtmlMessage = DOMPurify.sanitize(htmlMessage);

                $.ajax({
                    type: "POST",
                    url: "send_email.php",
                    data: {
                        toEmail: toEmail,
                        subject: subject,
                        plainTextMessage: sanitizedPlainTextMessage,
                        htmlMessage: sanitizedHtmlMessage
                    },
                    success: function(response) {
                        responseDiv.html(response);
                        emailForm[0].reset();
                        setTimeout(function() {
                            responseDiv.html("");
                        }, 3000);
                    }
                });
            });
        });
    </script>
</body>
